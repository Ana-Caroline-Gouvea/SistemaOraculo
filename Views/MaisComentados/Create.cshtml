@model Oraculo.Models.MaisComentados

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Mais Comentados</h1>

<h4>Mais Comentados</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostagemId" class="control-label">Postagem</label>
                <select asp-for="PostagemId" class ="form-control" asp-items="ViewBag.PostagemId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para a lista de Mais Comentados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
