@model IEnumerable<Oraculo.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Páginas de Categorias</h1>

<p>
    <a asp-action="Create" class="create">Criar nova categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td class="details">
                    <a asp-action="Details" asp-route-id="@item.CategoriaId"><i class="fa-solid fa-circle-info"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
