@model IEnumerable<Oraculo.Models.Novidade>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NovidadeFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NovidadeTexto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NovidadeFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NovidadeTexto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NovidadeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NovidadeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NovidadeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
