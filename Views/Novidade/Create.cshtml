@model Oraculo.Models.Novidade

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Novidade</h1>

<h4>Novidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NovidadeFoto" class="control-label"></label>
                <input asp-for="NovidadeFoto" class="form-control" />
                <span asp-validation-for="NovidadeFoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NovidadeTexto" class="control-label"></label>
                <input asp-for="NovidadeTexto" class="form-control" />
                <span asp-validation-for="NovidadeTexto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para a lista de Novidades</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
